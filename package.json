{
  "name": "matterbridge-airthings",
  "displayName": "Matterbridge Airthings",
  "version": "0.1.0",
  "description": "A Matterbridge plugin for Airthings air quality monitors via the Airthings Consumer API.",
  "keywords": [
    "airthings",
    "matterbridge"
  ],
  "homepage": "https://github.com/michaelahern/matterbridge-airthings",
  "bugs": {
    "url": "http://github.com/michaelahern/matterbridge-airthings/issues"
  },
  "license": "ISC",
  "author": "Michael Ahern <michael.ahern@gmail.com>",
  "files": [
    "./dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/module.js",
      "types": "./dist/module.d.ts"
    }
  },
  "main": "./dist/module.js",
  "types": "./dist/module.d.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/michaelahern/matterbridge-airthings.git"
  },
  "scripts": {
    "build": "npm run clean && npm run lint && tsc && npm link",
    "clean": "rimraf ./dist",
    "homebridge": "matterbridge -bridge",
    "lint": "eslint src/**/*.ts --max-warnings=0",
    "lint-fix": "eslint src/**/*.ts --max-warnings=0 --fix",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "airthings-consumer-api": "^1"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^4",
    "@types/node": "^20",
    "eslint": "^9",
    "matterbridge": "~3.0",
    "rimraf": "^6",
    "typescript": "~5.8",
    "typescript-eslint": "^8"
  },
  "engines": {
    "matterbridge": ">=3",
    "node": ">=20"
  }
}
